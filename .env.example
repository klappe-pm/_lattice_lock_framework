# Lattice Lock Framework - Environment Variables Template
# Copy this file to credentials/.env and fill in your actual values

# =============================================================================
# AI MODEL PROVIDERS
# =============================================================================

# OpenAI (GPT-4, GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=sk-proj-...
OPENAI_ORGANIZATION=org-...

# Anthropic Claude (Claude 3.5 Sonnet, Claude Opus)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI (Gemini 2.0 Flash, Gemini Pro)
GOOGLE_API_KEY=AIza...

# xAI Grok (Grok-4, Grok Code)
XAI_API_KEY=xai-...

# =============================================================================
# CLOUD INFRASTRUCTURE (OPTIONAL)
# =============================================================================

# AWS (if using Bedrock or AWS services)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1

# Azure OpenAI (if using Azure deployment)
AZURE_OPENAI_KEY=...
AZURE_OPENAI_ENDPOINT=https://....openai.azure.com/

# Bedrock (if using AWS Bedrock)
BEDROCK_ACCESS_KEY=...
BEDROCK_SECRET_KEY=...

# DIAL (if using DIAL API)
DIAL_API_KEY=...
DIAL_ENDPOINT=...

# =============================================================================
# LOCAL MODEL CONFIGURATION
# =============================================================================

# Ollama endpoint (default: http://localhost:11434/v1)
OLLAMA_BASE_URL=http://localhost:11434/v1

# =============================================================================
# DATABASE (OPTIONAL)
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/lattice_lock

# SQLite (default for development)
# DATABASE_URL=sqlite:///./lattice_lock.db

# =============================================================================
# DEVELOPMENT TOOLS (OPTIONAL)
# =============================================================================

# GitHub (for repository operations)
GITHUB_TOKEN=ghp_...

# Linear (for project management)
LINEAR_API_KEY=lin_api_...

# =============================================================================
# FRAMEWORK CONFIGURATION
# =============================================================================

# Model orchestrator strategy (balanced, cost_optimize, quality_first, speed_priority)
ORCHESTRATOR_STRATEGY=balanced

# Maximum concurrent model requests
MAX_CONCURRENT_MODELS=3

# Enable/disable cost tracking
ENABLE_COST_TRACKING=true

# Default model for quick tasks
DEFAULT_MODEL=llama3.1:8b

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=false
