{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Master MCP server configuration for Lattice Lock Framework. NEVER put actual API keys in this file.",
  "mcp_pack_version": "2.0.0",
  "_last_verified": "2025-12-18",
  "servers": {
    "gcloud": {
      "description": "Google Cloud Platform API access via gcloud CLI",
      "package": "@google-cloud/gcloud-mcp",
      "command": "npx",
      "args": ["-y", "@google-cloud/gcloud-mcp"],
      "env": {},
      "maintainer": "google",
      "auth_method": "gcloud auth application-default login",
      "documentation": "https://github.com/googleapis/gcloud-mcp"
    },
    "observability": {
      "description": "Google Cloud monitoring, logging, and tracing",
      "package": "@google-cloud/observability-mcp",
      "command": "npx",
      "args": ["-y", "@google-cloud/observability-mcp"],
      "env": {},
      "maintainer": "google",
      "auth_method": "gcloud auth application-default login",
      "documentation": "https://github.com/googleapis/gcloud-mcp"
    },
    "storage": {
      "description": "Google Cloud Storage management",
      "package": "@google-cloud/storage-mcp",
      "command": "npx",
      "args": ["-y", "@google-cloud/storage-mcp"],
      "env": {},
      "maintainer": "google",
      "auth_method": "gcloud auth application-default login",
      "documentation": "https://github.com/googleapis/gcloud-mcp"
    },
    "brave-search": {
      "description": "Web search via Brave Search API",
      "package": "@brave/brave-search-mcp-server",
      "command": "npx",
      "args": ["-y", "@brave/brave-search-mcp-server"],
      "env": {
        "BRAVE_API_KEY": ""
      },
      "env_required": ["BRAVE_API_KEY"],
      "maintainer": "brave",
      "auth_method": "Set BRAVE_API_KEY environment variable",
      "documentation": "https://github.com/brave/brave-search-mcp-server"
    },
    "sequential-thinking": {
      "description": "Extended reasoning capabilities for complex tasks",
      "package": "@modelcontextprotocol/server-sequential-thinking",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {},
      "maintainer": "modelcontextprotocol",
      "auth_method": "None required",
      "documentation": "https://github.com/modelcontextprotocol/servers"
    },
    "mcp-omnisearch": {
      "description": "Multi-source search (Tavily, Brave, Kagi, Perplexity, Jina AI)",
      "package": "@mseep/mcp-omnisearch",
      "command": "npx",
      "args": ["-y", "@mseep/mcp-omnisearch"],
      "env": {
        "TAVILY_API_KEY": "",
        "BRAVE_API_KEY": "",
        "KAGI_API_KEY": ""
      },
      "env_required": [],
      "env_optional": ["TAVILY_API_KEY", "BRAVE_API_KEY", "KAGI_API_KEY", "PERPLEXITY_API_KEY", "JINA_API_KEY"],
      "maintainer": "community",
      "auth_method": "Set at least one search API key",
      "documentation": "https://github.com/spences10/mcp-omnisearch"
    }
  }
}
