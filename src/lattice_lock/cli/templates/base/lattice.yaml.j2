# Lattice Lock Configuration
# Generated for: {{ project_name }}
# Documentation: https://github.com/klappe-pm/lattice-lock-framework
{% if github_repo %}
# Repository: {{ github_repo }}
{% endif %}

version: v2.1
generated_module: types_{{ project_name }}

# Entity definitions (contracts, services, etc.)
entities:
  # Example entity - customize as needed
  ExampleService:
    description: "Example service entity for {{ project_name }}"
    fields:
      id:
        type: uuid
        primary_key: true
      name:
        type: str
      description:
        type: str
        nullable: true
      status:
        type: enum
        enum: [active, inactive, pending]
        default: pending
      priority:
        type: int
        gte: 1
        lte: 10
        default: 5

# Governance rules
config:
  # Imports that should never be used
  forbidden_imports:
    - os.system
    - subprocess.call
    - eval
    - exec

  # Required patterns for code quality
  required_patterns:
    - type_hints
    - docstrings

  # Validation settings
  validation:
    strict_mode: false
    fail_on_warning: false
