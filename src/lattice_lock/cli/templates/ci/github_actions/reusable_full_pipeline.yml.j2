# Lattice Lock Full Pipeline Workflow (Using Reusable Workflows)
# Generated for: {{ project_name }}
# This workflow uses the reusable full-check workflow from the Lattice Lock Framework

name: Lattice Lock Full Pipeline

"on":
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]

jobs:
  lattice-lock-check:
    uses: klappe-pm/lattice-lock-framework/.github/workflows/reusable-full-check.yml@main
    with:
      python-version: "3.11"
      source-directory: "{{ source_directory | default('src/') }}"
      test-directory: "{{ test_directory | default('tests/') }}"
      coverage-enabled: true
      coverage-threshold: {{ coverage_threshold | default(80) }}
